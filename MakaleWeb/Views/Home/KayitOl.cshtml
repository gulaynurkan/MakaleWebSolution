@using MakaleWeb.Entities.View_Modal
@model KayitModal
@{
    ViewBag.Title = "Kayıt Sayfası";
}
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center">Kayıt Formu</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.KullaniciAd, new { @id = "kulad", @class = "form-control", placeholder = "Kullanıcı adınız" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.EMail, new { @id = "email", @class = "form-control", placeholder = "E-posta adresiniz." })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.SifreTekrar, new { @class = "form-control", placeholder = "Şifreniz(Tekrar)", type = "password" })
                    </div>
                    <div class="form-group ">
                        <button type="submit" id="btnkayit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<script>
    $("#btnkayit").click(
        function () {
            var kat = new Object();
            kat.K_ad = $("#kulad").val();
            kat.K_ack = $("#email").val();

            $.ajax({
                type: "post",
                dataType: "json",
                data: kat,
                url: "http://localhost:64017/api/Kategori/KategoriEkle",
                success: function (result) {
                    if(result=="basarili") alert("eklendi")
                }

            });


          });
    //$(function () {
    //    $("footer").parent().hide();
    //});
</script>